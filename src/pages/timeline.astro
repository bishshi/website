---
import TimelineLayout from '../layouts/Timeline.astro';

const events = [
  {
    id: 1,
    imageUrl: '/images/default.png',
    linkUrl: '#',
    title: '事件',
    description: '这是事件一的详细描述内容。',
  },
  {
    id: 2,
    imageUrl: '/images/event2.jpg',
    linkUrl: '#',
    title: '事件二标题',
    description: '这是事',
  },
];
---

<TimelineLayout title="发展历程-" description="时间线卡片示例">
  {events.map(event => (
    <div class="event-card">
      <a href={event.linkUrl} class="event-image">
        <img src={event.imageUrl} alt={event.title} />
      </a>
      <div class="event-text">
        <h3 class="event-title">{event.title}</h3>
        <p class="event-description">{event.description}</p>
      </div>
    </div>
  ))}
</TimelineLayout>
